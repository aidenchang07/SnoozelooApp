<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SnoozelooApp" parent="android:Theme.Material.Light.NoActionBar" />
    <style name="Theme.SnoozelooApp.Splash" parent="Theme.SplashScreen">
        <!-- 背景顏色 -->
        <item name="windowSplashScreenBackground">@color/splash_blue</item>
        <!-- Logo 圖示 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_alarm</item>
        <!-- SplashScreen結束後更換主題（注意：需搭配installSplashScreen()才有效果） -->
        <item name="postSplashScreenTheme">@style/Theme.SnoozelooApp</item>
    </style>
</resources>